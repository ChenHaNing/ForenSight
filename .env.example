# ForenSight Environment Configuration

# LLM 供应商（支持 deepseek / zhipu）
LLM_PROVIDER=zhipu

# 模型名称（Zhipu 示例：glm-4.7-flash）
LLM_MODEL_NAME=glm-4.7-flash

# API 密钥
LLM_API_KEY=your_llm_api_key_here

# API 基础 URL
# DeepSeek: https://api.deepseek.com
# Zhipu: https://open.bigmodel.cn/api/paas/v4
LLM_BASE_URL=https://open.bigmodel.cn/api/paas/v4

# 超时与重试（秒/次数）
LLM_TIMEOUT_SECONDS=90
LLM_MAX_RETRIES=2

# Tavily API Key (可选，用于联网检索)
TAVILY_API_KEY=

# 调试模式
DEBUG=false
