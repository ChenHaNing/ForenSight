# FFMAS Environment Configuration

# LLM 供应商 (openai, deepseek, anthropic)
LLM_PROVIDER=deepseek

# 模型名称 (推荐使用 deepseek-chat 或 deepseek-reasoner)
LLM_MODEL_NAME=deepseek-chat

# API 密钥
LLM_API_KEY=your_llm_api_key_here

# API 基础 URL (如果是 DeepSeek，通常为 https://api.deepseek.com)
LLM_BASE_URL=https://api.deepseek.com

# 超时与重试（秒/次数）
LLM_TIMEOUT_SECONDS=90
LLM_MAX_RETRIES=2

# Tavily API Key (可选，用于联网检索)
TAVILY_API_KEY=

# 调试模式
DEBUG=false
